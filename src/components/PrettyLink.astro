---
import LinkButton from "./LinkButton.astro";

export interface Props {
  href: string;
  className?: string;
}

const { href, className } = Astro.props;
---

<LinkButton
  className=`${className} underline decoration-dashed underline-offset-4 hover:text-skin-accent`
  href={href}
>
  <slot />
</LinkButton>
