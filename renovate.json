{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "Patch Updates",
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ],
  "baseBranches": [
    "post"
  ],
  "timezone": "Asia/Shanghai",
  "schedule": [
    "every weekend"
  ]
}